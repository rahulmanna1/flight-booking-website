{
  "framework": "nextjs",
  "regions": ["bom1"],
  "build": {
    "env": {
      "ENABLE_EXPERIMENTAL_COREPACK": "1"
    }
  },
  "buildCommand": "npm run build",
  "installCommand": "npm install && npx prisma generate",
  "functions": {
    "app/api/**": {
      "maxDuration": 30
    },
    "app/api/cron/**": {
      "maxDuration": 60
    }
  },
  "crons": [
    {
      "path": "/api/cron/cancel-expired-payments",
      "schedule": "0 * * * *"
    }
  ]
}
